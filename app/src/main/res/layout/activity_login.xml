<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0086D6"
    tools:context=".LoginActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="365sp"
        android:layout_height="60sp"
        android:layout_marginBottom="90sp"
        android:onClick="googlesigin"
        app:cardCornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:cardCornerRadius="10sp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="37sp"
                android:layout_height="36sp"
                android:layout_marginStart="40sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/googleg_standard_color_18" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="274sp"
                android:layout_height="25sp"
                android:layout_marginStart="16sp"
                android:layout_marginBottom="3dp"
                android:text="Continue with google"
                android:textColor="#5E5E5E"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.51" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="276sp"
        android:layout_height="225sp"
        android:layout_marginStart="64sp"
        android:layout_marginTop="172sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fisttable" />

</androidx.constraintlayout.widget.ConstraintLayout>